{
  "name": "node-apis",
  "version": "3.8.1",
  "description": "ðŸš€ Advanced TypeScript API generator with clean architecture, comprehensive testing, and automatic formatting. Generate production-ready Node.js APIs with complete integration test suites.",
  "main": "dist/index.js",
  "bin": {
    "node-apis": "./bin/cli.js",
    "napis": "./bin/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node bin/cli.js",
    "format": "prettier --write \"src/**/*.ts\" \"*.{js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"*.{js,json,md}\"",
    "prepublishOnly": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest tests/**/success.test.ts tests/**/validation.test.ts tests/**/errors.test.ts",
    "test:integration": "vitest tests/**/integration.test.ts",
    "test:module": "vitest tests/{module-name}/**/*.test.ts",
    "test:operation": "vitest tests/{module-name}/{operation-name}/**/*.test.ts",
    "test:ci": "vitest run --coverage --reporter=junit --outputFile=coverage/junit.xml"
  },
  "keywords": [
    "api-generator",
    "typescript",
    "nodejs",
    "express",
    "hono",
    "crud",
    "clean-architecture",
    "code-generator",
    "cli",
    "scaffold",
    "boilerplate",
    "performance-monitoring",
    "request-tracing",
    "type-driven",
    "zod",
    "validation",
    "prettier",
    "auto-formatting",
    "production-ready",
    "testing",
    "integration-tests",
    "vitest",
    "supertest",
    "test-generation",
    "tdd",
    "test-driven-development",
    "trpc",
    "type-safety",
    "end-to-end",
    "rpc",
    "procedures",
    "monorepo",
    "destructuring",
    "smart-validation"
  ],
  "author": {
    "name": "Sobebar Ali",
    "email": "sobebar.ali17@gmail.com",
    "url": "https://sobebar.online"
  },
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "fs-extra": "^11.1.1",
    "inquirer": "^9.2.12",
    "zod": "^3.22.4"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sobebarali/node-apis.git"
  },
  "bugs": {
    "url": "https://github.com/sobebarali/node-apis/issues"
  },
  "homepage": "https://github.com/sobebarali/node-apis#readme",
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^24.3.1",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vitest": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "supertest": "^6.3.3",
    "@types/supertest": "^6.0.2",
    "c8": "^8.0.1"
  }
}
